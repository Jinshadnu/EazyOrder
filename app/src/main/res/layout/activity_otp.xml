<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9"
    tools:context=".Otp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewOTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp">

        <TextView
            android:id="@+id/otp"
            android:layout_marginTop="60dp"
            android:textColor="#0E6655"
            android:textStyle="bold"
            android:text="Enter 4 digit OTP"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:background="@drawable/edittext_border"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/otp2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/otp1"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/layout_width20"
                android:background="@drawable/edittext_border"
                android:inputType="number" />
            <EditText
                android:id="@+id/otp3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="@dimen/layout_width20"
                android:layout_toRightOf="@id/otp2"
                android:inputType="number" />
            <EditText
                android:id="@+id/otp4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_border"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/layout_width20"
                android:layout_toRightOf="@id/otp3"
                android:inputType="number" />


            <Button
                android:id="@+id/buttonOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otp1"
                android:text="Submit"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:textColor="#fff"
                android:background="@drawable/button_border"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>